---
import Layout from '../layouts/Layout.astro';

const languages = [
    { name: 'Java', url: 'https://miro.medium.com/v2/resize:fit:2560/1*2XrX0fP0htyTCah7AglTig.jpeg', text: 'Java programming language' },
    { name: 'Python', url: 'https://visionyvalor.es/wp-content/uploads/2024/03/Python-Symbol_0-3.png', text: 'Python programming language' },
    { name: 'PHP', url: 'https://upload.wikimedia.org/wikipedia/commons/thumb/2/27/PHP-logo.svg/640px-PHP-logo.svg.png', text: 'PHP programming language' }
];

const item = Astro.url.searchParams.get('item');
const language = languages.find(lang => lang.name === item);

const title = language ? `Sobre ${language.name}` : 'No encontrado';
---

<Layout title={title}>
    <main>
        <h1>{title}</h1>
        {language ? (
            <div class="language-content">
                <img src={language.url} alt={`${language.name} logo`} class="language-image">
                <p>{language.text}</p>
            </div>
        ) : (
            <p>Language not found</p>
        )}
        <a href="/">Back to home</a>
    </main>
</Layout>

<style>
    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: calc(100% - 2rem);
        color: white;
        font-size: 20px;
        line-height: 1.6;
    }
    .language-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 2rem;
    }
    .language-image {
        max-width: 300px;
        margin-bottom: 1rem;
    }
</style>